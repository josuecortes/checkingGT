<div class="row">
	<div class="span10 offset1">

		<%%= form_for(@<%= singular_table_name %>, :html=>{:class=>"form-horizontal well"}) do |f| %>
		<%% if @<%= singular_table_name %>.errors.any? %>
		<div class="alert alert-error">
			<button type="button" class="close" data-dismiss="alert">&times;</button>
			<strong><%%= pluralize(@<%= singular_table_name %>.errors.count, "erro") %> ao tentar salvar este formulario:</strong>
			
			<ul>
				<%% @<%= singular_table_name %>.errors.full_messages.each do |msg| %>
				<li>
					<%%= msg %>
				</li>
				<%% end %>
			</ul>
		</div>
		<%% end %>
				
		<% attributes.each do |attribute| -%>
		<div class="control-group">
			<%%= f.label :<%= attribute.name %>, :class=>"control-label" %>
			<div class="controls">
				<%%= f.<%= attribute.field_type %> :<%= attribute.name %>, :class=>"input-xlarge" %>
				<p class="help-block">
					
				</p>
			</div>
		</div>
		<% end -%>
		<div class="form-actions">
			<%%= f.submit :class=>"btn btn-primary" %>
			<button type="reset" class="btn">
				Cancelar
			</button>
		</div>
		<%% end %>

	</div>
</div>
