<div class="row">
	<div class="span10 offset1">

		<%= form_for(@core_pessoa_fisica, :html=>{:class=>"form-horizontal well"}) do |f| %>
		<% if @core_pessoa_fisica.errors.any? %>
		<div class="alert alert-error">
			<button type="button" class="close" data-dismiss="alert">&times;</button>
			<strong><%= pluralize(@core_pessoa_fisica.errors.count, "erro") %> ao tentar salvar este formulario:</strong>
			
			<ul>
				<% @core_pessoa_fisica.errors.full_messages.each do |msg| %>
				<li>
					<%= msg %>
				</li>
				<% end %>
			</ul>
		</div>
		<% end %>
				
		
		<div class="control-group">
			<%= f.label :nome, :class=>"control-label" %>
			<div class="controls">
				<%= f.text_field :nome, :class=>"input-xlarge" %>
				<p class="help-block">
					
				</p>
			</div>
		</div>
		
		<div class="control-group">
			<%= f.label :cpf, :class=>"control-label" %>
			<div class="controls">
				<%= f.text_field :cpf, :class=>"input-xlarge" %>
				<p class="help-block">
					
				</p>
			</div>
		</div>
		
		<div class="control-group">
			<%= f.label :endereco, :class=>"control-label" %>
			<div class="controls">
				<%= f.text_field :endereco, :class=>"input-xlarge" %>
				<p class="help-block">
					
				</p>
			</div>
		</div>
		
		<div class="control-group">
			<%= f.label :bairro, :class=>"control-label" %>
			<div class="controls">
				<%= f.text_field :bairro, :class=>"input-xlarge" %>
				<p class="help-block">
					
				</p>
			</div>
		</div>
		
		<div class="control-group">
			<%= f.label :cidade, :class=>"control-label" %>
			<div class="controls">
				<%= f.text_field :cidade, :class=>"input-xlarge" %>
				<p class="help-block">
					
				</p>
			</div>
		</div>
		
		<div class="control-group">
			<%= f.label :estado, :class=>"control-label" %>
			<div class="controls">
				<%= f.text_field :estado, :class=>"input-xlarge" %>
				<p class="help-block">
					
				</p>
			</div>
		</div>
		
		<div class="control-group">
			<%= f.label :observacoes, :class=>"control-label" %>
			<div class="controls">
				<%= f.text_area :observacoes, :class=>"input-xlarge" %>
				<p class="help-block">
					
				</p>
			</div>
		</div>
		
		<div class="control-group">
			<%= f.label :usuario_id, :class=>"control-label" %>
			<div class="controls">
				<%= f.number_field :usuario_id, :class=>"input-xlarge" %>
				<p class="help-block">
					
				</p>
			</div>
		</div>
		
		<div class="control-group">
			<%= f.label :usuario_alterou_id, :class=>"control-label" %>
			<div class="controls">
				<%= f.number_field :usuario_alterou_id, :class=>"input-xlarge" %>
				<p class="help-block">
					
				</p>
			</div>
		</div>
		
		<div class="form-actions">
			<%= f.submit :class=>"btn btn-primary" %>
			<button type="reset" class="btn">
				Cancelar
			</button>
		</div>
		<% end %>

	</div>
</div>
