<div class="page-header">
	<h3><%= link_to 'Voltar', core_negativacao_tipos_path %> | Editando Tipo de Negativacao Codigo <%= @core_negativacao_tipo.codigo %></h3>
</div>

<div class="row">
	<div class="span10 offset1">

		<%= form_for(@core_negativacao_tipo, :html=>{:class=>"form-horizontal well"}) do |f| %>

		<%= f.hidden_field :usuario_alterou_id, :value=>@usuario_logado.id %>

		<% if @core_negativacao_tipo.errors.any? %>
		<div class="alert alert-error">
			<button type="button" class="close" data-dismiss="alert">&times;</button>
			<strong><%= pluralize(@core_negativacao_tipo.errors.count, "erro") %> ao tentar salvar este formulario:</strong>

			<ul>
				<% @core_negativacao_tipo.errors.full_messages.each do |msg| %>
				<li>
					<%= msg %>
				</li>
				<% end %>
			</ul>
		</div>
		<% end %>


		<div class="control-group">
			<%= f.label :codigo, "Codigo", :class=>"control-label" %>
			<div class="controls">
				<%= f.text_field :codigo, :class=>"input-small", :required=>true %>
				<p class="help-block">

				</p>
			</div>
		</div>

		<div class="control-group">
			<%= f.label :descricao, "Descrição", :class=>"control-label" %>
			<div class="controls">
				<%= f.text_field :descricao, :class=>"input-xxlarge", :required=>true %>
				<p class="help-block">

				</p>
			</div>
		</div>

		<div class="form-actions">
			<%= f.submit "Atualizar", :class=>"btn btn-primary" %>
			<button type="reset" class="btn">
				Cancelar
			</button>
		</div>
		<% end %>

	</div>
</div>
