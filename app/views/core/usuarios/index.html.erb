<div class="page-header">
	<h3>Listando Usuarios</h3>
</div>

<table class="table table-bordered table-striped table-hover">
	<thead>
		<tr>
			<th>Nome</th>
			<th>E-mail</th>
			<th>Status</th>
			<th>Mudar Senha</th>
			<th>Transportadora</th>

			<th></th>

		</tr>
	</thead>
	<% @core_usuarios.each do |core_usuario| %>
	<tbody>
		<tr>
			<td><%= core_usuario.nome %></td>
			<td><%= core_usuario.email %></td>
			<td><%= core_usuario.usuario_ativo %></td>
			<td><%= core_usuario.usuario_mudar_senha %></td>
			<% if core_usuario.transportadora_id != nil %>
			<td><%= core_usuario.transportadora.razaosocial %></td>
			<% else %>
			<td></td>
			<% end %>
			<td><%= link_to 'Mostrar', core_usuario, :class=>"btn btn-small" %></td>
			<td><%= link_to 'Editar', edit_core_usuario_path(core_usuario), :class=>"btn btn-primary btn-small" %></td>
			<td><%= link_to 'Mudar Status', core_usuario, :class=>"btn btn-danger btn-small", method: :delete, data: { confirm: 'Deseja Realmente mudar o Status deste Usuario?' } %></td>
			<td><%= link_to 'Resetar a Senha', core_usuario_resetasenha_path(core_usuario.id), :class=>"btn btn-danger btn-small", data: { confirm: 'Deseja Realmente Resetar a Senha deste Usuario ?' } %></td>
		</tr>
	</tbody>
	<% end %>
</table>

<br />

<%= link_to 'Novo(a) Usuario', new_core_usuario_path, :class=>"btn btn-success" %>
