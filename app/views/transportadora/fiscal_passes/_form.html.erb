<div class="row">
	<div class="span10 offset1">

		<%= form_for(@transportadora_fiscal_pass, :html=>{:class=>"form-horizontal well"}) do |f| %>
		<% if @transportadora_fiscal_pass.errors.any? %>
		<div class="alert alert-error">
			<button type="button" class="close" data-dismiss="alert">&times;</button>
			<strong><%= pluralize(@transportadora_fiscal_pass.errors.count, "erro") %> ao tentar salvar este formulario:</strong>
			
			<ul>
				<% @transportadora_fiscal_pass.errors.full_messages.each do |msg| %>
				<li>
					<%= msg %>
				</li>
				<% end %>
			</ul>
		</div>
		<% end %>
				
		
		<div class="control-group">
			<%= f.label :nota_id, :class=>"control-label" %>
			<div class="controls">
				<%= f.number_field :nota_id, :class=>"input-xlarge" %>
				<p class="help-block">
					
				</p>
			</div>
		</div>
		
		<div class="control-group">
			<%= f.label :datahora_emissao, :class=>"control-label" %>
			<div class="controls">
				<%= f.datetime_select :datahora_emissao, :class=>"input-xlarge" %>
				<p class="help-block">
					
				</p>
			</div>
		</div>
		
		<div class="control-group">
			<%= f.label :data_inclusao, :class=>"control-label" %>
			<div class="controls">
				<%= f.datetime_select :data_inclusao, :class=>"input-xlarge" %>
				<p class="help-block">
					
				</p>
			</div>
		</div>
		
		<div class="control-group">
			<%= f.label :usuario_id, :class=>"control-label" %>
			<div class="controls">
				<%= f.number_field :usuario_id, :class=>"input-xlarge" %>
				<p class="help-block">
					
				</p>
			</div>
		</div>
		
		<div class="form-actions">
			<%= f.submit :class=>"btn btn-primary" %>
			<button type="reset" class="btn">
				Cancelar
			</button>
		</div>
		<% end %>

	</div>
</div>
