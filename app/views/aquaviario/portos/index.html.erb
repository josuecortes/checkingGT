<div class="page-header">
	<h3>Lista de Portos</h3>
</div>

<table class="table table-bordered table-striped table-hover">
	<thead>
		<tr>

			<th>Nome</th>

			<th>Cidade</th>

			<th>Estado</th>

			<th></th>
		</tr>
	</thead>

	<tbody>
		<%= content_tag_for(:tr, @aquaviario_portos) do |aquaviario_porto| %>

		<td><%= aquaviario_porto.nome %></td>

		<td><%= aquaviario_porto.cidade %></td>

		<td><%= aquaviario_porto.estado %></td>

		<td><%= link_to 'Mostrar', aquaviario_porto, :class=>"btn btn-small"%></td>
		<td><%= link_to 'Editar', edit_aquaviario_porto_path(aquaviario_porto), :class=>"btn btn-primary btn-small" %></td>
		<td><%= link_to 'Apagar', aquaviario_porto, :class=>"btn btn-danger btn-small", method: :delete, data: { confirm: 'Você está certo disso?' } %></td>
		<% end %>
	</tbody>
</table>

<br />

<%= link_to 'Novo Porto', new_aquaviario_porto_path, :class=>"btn btn-success" %>
